<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <style>
        .switcher {
            position: relative;
            left: 615px;
        }

        .moon {
            box-shadow: inset -10px 2px 0 0 #899098;
        }

        .moon-c {

        }
        .switcher:checked ~ .day .big-c {
            fill: url(#day-sky)
        }
        .switcher ~ .day .big-c {
            fill: url(#night-sky)
        }

        .switcher:checked ~ .day path {
            fill: url(#day-water);
        }
        .switcher ~ .day path {
            fill: url(#night-water);
        }

        .switcher:checked ~ .day .sun {
            opacity: 1;
            transform: translate(0px, 0px);
        }
        .switcher ~ .day .sun {
            opacity: 0;
            transition: 1.5s;
            transform: translate(-50px, 60px);
        }

        .switcher:checked ~ .day .moon {
            opacity: 0;
            transform: translate(150px, -160px);
        }
        .switcher ~ .day .moon {
            opacity: 1;
            transform: translate(0px, 0px);
            transition: all 1.5s;
        }

        .switcher:checked ~ .day .stars {
            opacity: 0;
            transform: translate(250px, -200px);
        }
        .switcher ~ .day .stars {
            opacity: 1;
            transform: translate(0px, 0px);
            transition: all 1.5s;
        }
    </style>
</head>
<body>
<input type="checkbox" class="switcher">
<svg class="day" width="1000" height="500">
    <defs>
        <linearGradient id="day-sky" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:rgb(194,77,5);stop-opacity:1" />
            <stop offset="100%" style="stop-color:rgb(255,255,0);stop-opacity:1" />
        </linearGradient>
    </defs>
    <defs>
        <linearGradient id="day-water" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:rgb(113,152,142);stop-opacity:1"/>
            <stop offset="50%" style="stop-color:rgb(161,168,95);stop-opacity:1"/>
            <stop offset="100%" style="stop-color:rgb(113,152,142);stop-opacity:1"/>
        </linearGradient>
    </defs>
    <defs>
        <linearGradient id="night-sky" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:rgb(18,28,58);stop-opacity:1" />
            <stop offset="100%" style="stop-color:rgb(32,69,100);stop-opacity:1" />
        </linearGradient>
    </defs>
    <defs>
        <linearGradient id="night-water" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:rgb(62,98,122);stop-opacity:1"/>
            <stop offset="50%" style="stop-color:rgb(78,114,139);stop-opacity:1"/>
            <stop offset="100%" style="stop-color:rgb(62,98,122);stop-opacity:1"/>
        </linearGradient>
    </defs>
    <circle class="big-c" cx="600" cy="250" r="200" stroke="#555555" fill="url(#day-sky)" stroke-width="5"/>
    <circle class="sun" cx="600" cy="320" r="60" fill="#F2EF88"/>
    <path d="M415 320 C 476 485, 715 497, 785 320" fill="url(#day-water)"/>


    <circle class="moon" cx="650" cy="220" r="50" fill="#d9d8d0"/>

    <circle class="moon moon-c" cx="630" cy="210" r="15" fill="#b9b8b0"/>
    <circle class="moon moon-c" cx="670" cy="200" r="8" fill="#b9b8b0"/>
    <circle class="moon moon-c" cx="650" cy="250" r="8" fill="#b9b8b0"/>
    <circle class="moon moon-c" cx="630" cy="240" r="8" fill="#b9b8b0"/>

    <circle class="stars" cx="500" cy="180" r="1" fill="#8b9cac"/>
    <circle class="stars" cx="550" cy="80" r="1" fill="#8b9cac"/>
    <circle class="stars" cx="470" cy="280" r="1" fill="#8b9cac"/>
    <circle class="stars" cx="600" cy="170" r="1" fill="#8b9cac"/>
    <circle class="stars" cx="620" cy="290" r="1" fill="#8b9cac"/>
    <circle class="stars" cx="700" cy="270" r="1" fill="#8b9cac"/>
    <circle class="stars" cx="550" cy="250" r="1" fill="#8b9cac"/>
</svg>
</body>
</html>