<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="styles/Article.css"/>
    <link rel="stylesheet" href="styles/Comments.css"/>
    <link rel="stylesheet" href="styles/Group-page.css"/>
    <link rel="stylesheet" href="styles/Header.css"/>
    <link rel="stylesheet" href="styles/Tool-bar.css"/>
    <link rel="stylesheet" href="styles/Icons.css"/>
    <link rel="stylesheet" href="styles/News.css"/>
    <link rel="stylesheet" href="styles/Members.css"/>
    <link rel="stylesheet" href="styles/Friend-suggest.css"/>
    <link rel="stylesheet" href="styles/Languages.css"/>
    <link rel="stylesheet" href="styles/Info-footer.css"/>
    <link rel="stylesheet" href="styles/Side-bar.css"/>
    <link rel="stylesheet" href="styles/Common.css"/>
    <link rel="stylesheet" href="styles/New-group.css"/>
    <link rel="stylesheet" href="styles/Recent-photos.css"/>
    <link rel="stylesheet" href="styles/Group-suggest.css"/>
    <link rel="stylesheet" href="styles/Group-bar.css"/>
    <title>Group Page</title>
</head>
<body class="Facebook">
<header class="Header">
    <div class="Header__wrapper">
        <a href="index">
            <span class="Header__icon3 Icon3_logo"></span>
        </a>
        <form action="#">
            <input class="Header__search-field" type="search" placeholder="Search" value="CS@UCU"/>
            <button class="Header__search-button" type="button"></button>
        </form>
        <nav class="Header__nav">
            <a class="Header__nav-text" href="user_page" title="Profile">
                <img class="Header__nav-user-pic"
                     src="images/user_avatar.jpeg"/>
                Olya
            </a>
            <a class="Header__nav-text" href="index">Home</a>
            <a class="Header__nav-icon" href="#" title="Friends Requests">
                <span class="Header__icon2 Icon2_people"></span>
            </a>
            <a class="Header__nav-icon" href="#" title="Messages">
                <span class="Header__icon3 Icon3_messages"></span>
            </a>
            <a class="Header__nav-icon" href="#" title="Notifications">
                <span class="Header__icon2 Icon2_globe"></span>
            </a>
            <a class="Header__nav-icon" href="#" title="Quick Help">
                <span class="Header__icon3 Icon3_help"></span>
            </a>
            <a class="Header__nav-icon" href="#">
                <span class="Header__icon3 Icon3_down"></span>
            </a>
        </nav>
    </div>
</header>
<section class="Facebook__payload">
    <aside class="Tool-bar">
        <h1 class="Tool-bar__h1">CS@UCU</h1>
        <nav class="Tool-bar__nav">
            <h4 class="Tool-bar__nav-title">Closed Group</h4>
            <a class="Tool-bar__item" href="#">About</a>
            <a class="Tool-bar__item active" href="group_page">Discussion</a>
            <a class="Tool-bar__item" href="#">Members</a>
            <a class="Tool-bar__item" href="#">Events</a>
            <a class="Tool-bar__item" href="#">Videos</a>
            <a class="Tool-bar__item" href="#">Photos</a>
            <a class="Tool-bar__item" href="#">Files</a>
            <form action="#">
                <input class="Tool-bar__search-field" placeholder="Search this group">
                <button class="Tool-bar__search-button" type="button"></button>
            </form>
        </nav>
        {{#Group.Tool-bar}}
            <nav class="Tool-bar__nav">
                <h4 class="Tool-bar__nav-title">{{title}}</h4>
                {{#nav}}
                    <a class="Tool-bar__item" href="{{link}}">
                        <span class="Icon {{icon-class}}"></span>{{item}}
                    </a>
                {{/nav}}
            </nav>
        {{/Group.Tool-bar}}
    </aside>
    <div class="Facebook__group-content">
        <a class="Facebook__cover" href="#">
            <div class="Cover__photo"></div>
        </a>
        <div class="Group-bar">
            {{#Group.Group-bar}}
                <a class="Group-bar__item" href="#">
                    <span class="{{icon}}"></span>{{item}}
                </a>
            {{/Group.Group-bar}}
        </div>
        <main class="Facebook__news-line">
            {{#Group.News}}
                <div class="News">
                    <header class="News__make-post">
                        {{#header}}
                            <a class="News__post-option {{first}} {{status}}" href="{{action}}">
                                <span class="News__icon {{icon-class}}"></span>{{item}}
                            </a>
                        {{/header}}
                    </header>
                    <div class="News__content">
                        <form class="News__form" action="#">
                            <a href="user_page">
                                <img class="News__user-pic" src="images/user_avatar.jpeg"/>
                            </a>
                            <input class="News__text-input" name="text" placeholder="Write something..."/>
                        </form>
                        <footer class="News__additional">
                            {{#footer}}
                                <a class="News__more-options" href="{{action}}">
                                    <span class="Icon {{icon-class}}"></span>{{item}}
                                </a>
                            {{/footer}}
                        </footer>
                    </div>
                </div>
            {{/Group.News}}
            <h5 class="Facebook__recent-activity">RECENT ACTIVITY</h5>
            {{#Group.Article-and-Comments}}
                <article class="Article">
                    {{#Article-header}}
                        <header class="Article__header">
                            <img class="Article__user-pic" src="{{user-img}}"/>
                            <div class="Article__user-info">
                                <a class="Article__user-name" href="{{user-link}}">{{user-name}}</a>
                                {{#additional-info}}
                                    <span>{{preposition}}
                                        <a class="Article__link" href="{{info-link}}">{{info}}</a>
                                        </span>
                                {{/additional-info}}
                                <a href="#">
                                    <time class="Article__time" datetime="dd.mm.yyyy">{{post-time}}</time>
                                </a>
                            </div>
                        </header>
                    {{/Article-header}}
                    {{#Article-content}}
                        <main class="Article__content">
                            <p class="Article__description">{{description}}</p>
                            <img class="Article__file" src="{{file-src}}"/>
                        </main>
                    {{/Article-content}}
                    <footer class="Article__reaction-on">
                        <a class="Article__likes-etc" href="#">
                            <span class="Article__icon9 Icon9_like"></span>Like
                        </a>
                        <a class="Article__likes-etc" href="#">
                            <span class="Article__icon9 Icon9_comment"></span>Comment
                        </a>
                        <a class="Article__likes-etc" href="#">
                            <span class="Article__icon9 Icon9_share"></span>Share
                        </a>
                    </footer>
                </article>
                {{#Comments}}
                    <footer class="Comments">
                        {{#reactions}}
                            <div class="Comments__reactions">
                                <a class="Comments__action" href="#">
                                    <span class="Comments__icon9 Icon9_like-blue"></span>{{who-liked}}
                                </a>
                                <a class="Comments__action" href="#">
                                    {{who-shared}}
                                </a>
                            </div>
                        {{/reactions}}
                        <!--TODO: add user comments + data.json items-->
                        <div class="Comments__comments">
                            <a href="user_page">
                                <img class="Comments__user-pic"
                                     src="images/user_avatar.jpeg"/>
                            </a>
                            <form action="#" class="Comments__add-item">
                                <input class="Comments__text-area" type="text" placeholder="Write a comment..."/>
                                <a href="#">
                                    <span class="Comments__icon1 Icon1_smile-gray"></span>
                                </a>
                                <a href="#">
                                    <span class="Comments__icon1 Icon1_photo-gray"></span>
                                </a>
                                <a href="#">
                                    <span class="Comments__icon1 Icon1_gif-gray"></span>
                                </a>
                                <a href="#">
                                    <span class="Comments__icon1 Icon1_stiker-gray"></span>
                                </a>
                            </form>
                        </div>
                    </footer>
                {{/Comments}}
            {{/Group.Article-and-Comments}}
        </main>
        <aside class="Facebook__ad-feed">
            <div class="Members">
                <h5 class="Members__title">ADD MEMBERS</h5>
                <form action="#">
                    <input class="Members__search" type="search" placeholder=" + Enter name or email address..."/>
                </form>
                <h5 class="Members__title">MEMBERS
                    <a href="#" class="Members__title-more">125 members</a>
                </h5>
                <div class="Members__user">
                    {{#Group.Members}}
                        <a href="{{link}}" title="{{name}}">
                            <img class="Members__user-pic" src="{{img-src}}"/>
                        </a>
                    {{/Group.Members}}
                </div>
                <h5 class="Members__title">DESCRIPTION
                    <a href="#" class="Members__title-more">Add a Description</a>
                </h5>
                <p class="Members__text">Tell people what this group is about.</p>
            </div>
            <div class="New-group">
                <h5 class="New-group__title">CREATE NEW GROUPS</h5>
                <p class="New-group__text">Groups make it easier than ever to share with friends, family and teammates.</p>
                <a class="New-group__button" href="#">Create Group</a>
            </div>
            <div class="Recent-photos">
                <h5 class="Recent-photos__title">RECENT GROUP PHOTOS
                    <a href="#" class="Recent-photos__title-more">See All</a>
                </h5>
                {{#Group.Recent-photos}}
                    <a href="{{link}}">
                        <img class="Recent-photos__photo" src="{{img-src}}"/>
                    </a>
                {{/Group.Recent-photos}}
            </div>
            <div class="Group-suggest">
                <h5 class="Group-suggest__title">Suggested Groups
                    <a href="#" class="Group-suggest__title-more">See All</a>
                </h5>
                {{#Group.Group-suggest}}
                    <div class="Group-suggest__group">
                        <a href="#">
                            <div class="Group-suggest__group-cover"></div>
                        </a>
                        <a href="{{link}}"><h5 class="Group-suggest__group-name">{{group-name}}</h5></a>
                        <p class="Group-suggest__group-members">{{members}}</p>
                        <form action="#">
                            <button class="Group-suggest__group-button" type="button">+ Join</button>
                        </form>
                    </div>
                {{/Group.Group-suggest}}
            </div>
            <div class="Friend-suggest">
                <h5 class="Friend-suggest__title">People You May Know <a class="Friend-suggest__link" href="#">See
                    All</a>
                </h5>
                {{#Group.Friend-suggest}}
                    <div class="Friend-suggest__item">
                        <a href="{{user-link}}">
                            <img class="Friend-suggest__user-pic"
                                 src="{{user-pic}}"/>
                        </a>
                        <div class="Friend-suggest__user-info">
                            <a class="Friend-suggest__user-name" href="#">{{user-name}}</a><br>
                            <a class="Friend-suggest__mutual-frs" href="#">{{mutual-friends}}</a><br>
                            <button class="Friend-suggest__button" type="button">
                                <span class="Friend-suggest__icon Icon_add"></span>Add Friend
                            </button>
                        </div>
                    </div>
                {{/Group.Friend-suggest}}
            </div>
            <div class="Languages">
                {{#Languages}}
                    <a class="Languages__item {{status}}" href="{{action}}">
                        {{language}}
                    </a>
                {{/Languages}}
            </div>
            <footer class="Info-footer">
                {{#Info-footer}}
                    <a class="Info-footer__item" href="{{action}}">{{info}}</a>
                {{/Info-footer}}
            </footer>
        </aside>
    </div>
</section>
{{#Side-bar}}
    <div class="Side-bar">
        {{#online-users}}
            <a class="Side-bar__item" href="{{link}}">
                <img class="Side-bar__user-pic" src="{{pic}}"/>{{name}}
                <span class="{{online}}"></span>
            </a>
        {{/online-users}}
        <h5 class="Side-bar__more-contacts-title">MORE CONTACTS</h5>
        {{#more-contacts}}
            <a class="Side-bar__item" href="{{link}}">
                <img class="Side-bar__user-pic" src="{{pic}}"/>{{name}}
                <span class="{{online}}"></span>
            </a>
        {{/more-contacts}}
        <footer class="Side-bar__search">
            <form class="Search">
                <a class="Search__item_icon" href="#">
                    <span class="Search__icon Icon2_find"></span>
                </a>
                <input class="Search__input" type="search" name="search" placeholder="Search">
                <a class="Search__item_icon" href="#" title="Options">
                    <span class="Search__icon Icon4_settings"></span>
                </a>
                <a class="Search__item_icon" href="#" title="New Message">
                    <span class="Search__icon Icon4_new-message"></span>
                </a>
                <a class="Search__item_icon" href="#" title="Create New Group">
                    <span class="Search__icon Icon4_create-group"></span>
                </a>
            </form>
        </footer>
    </div>
{{/Side-bar}}
</body>
</html>