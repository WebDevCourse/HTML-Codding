   <section class="Interactive">
            <h2 class="Interactive__caption">King Penguins</h2>
            <figure class="Interactive__hover">
                <svg class="Interactive__hover-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40">
                    <circle cx="20" cy="20" r="8" stroke="#089bd9" fill="#089bd9"/>
                    <path d="M28 10 Q 37 20 28 30" stroke="#089bd9" fill="transparent" stroke-width="2"/>
                    <path d="M 12 10 Q 3 20 12 30" stroke="#089bd9" fill="transparent" stroke-width="2"/>
