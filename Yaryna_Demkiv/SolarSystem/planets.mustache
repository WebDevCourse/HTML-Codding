<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>SolarSystem</title>
</head>
<style>
    body {
        margin: 0;
        background-image: url("http://res.cloudinary.com/dvhn8lvvz/image/upload/c_scale,e_colorize:10,h_262,w_328/v1515685248/small_star_background_wkynkm.jpg");
        background-repeat: repeat;
    }
    .galaxy {
        position: relative;
    }
    #sun {
        height: 240px;
        position: relative;
        top:315px;
        left: 365px;
    }
   /* #mercury img {
        height: 4px;
    }*/

    #mercury {
        position: absolute;
        left:380px;
        top:330px;
    }
    #venus {
        position: absolute;
        left:365px;
        top:315px;
    }
    #earth {
        position: absolute;
        left:342px;
        top:292px;
    }
    #mars {
        position: absolute;
        left:315px;
        top:265px;
    }
    #jupiter {
        position: absolute;
        left:275px;
        top:228px;
    }

    #jupiter-image {
        width: 32px;
    }
    #saturn {
        position: absolute;
        left:202px;
        top:157px;
    }

    #saturn-image {
        width: 80px;
    }

    #uranus {
        position: absolute;
        left:158px;
        top:112px;
    }
    #neptune {
        position: absolute;
        left:124px;
        top:79px;
    }

    .orbit {
        position: absolute;
        top: 50%;
        left: 50%;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50%;
       /* transform-style: preserve-3d; */
        animation-name: orbit;
        animation-iteration-count: infinite;
        animation-timing-function: linear;
    }
    .pos {
        position: absolute;
        top: 50%;
        width: 128px;
        height: 128px;
        padding: 0;
        /*margin-top: -5px;
        margin-left: -5px;*/
        /*transform-style: preserve-3d;*/
       /* animation-name: invert;*/
        animation-iteration-count: infinite;
        animation-timing-function: linear; }

    .planet {
        background-color: transparent;
        background-repeat: no-repeat;
        /*background-size: cover;*/
        animation-iteration-count: infinite;
        animation-timing-function: linear; }

    #mercury .pos,
    #mercury .planet,
    #mercury.orbit {
        animation-duration: 2.89016s; }

    #venus .pos,
    #venus .planet,
    #venus.orbit {
        animation-duration: 7.38237s; }

    #earth .pos,
    #earth .planet,
    #earth.orbit {
        animation-duration: 12.00021s; }

    #mars .pos,
    #mars .planet,
    #mars.orbit {
        animation-duration: 22.57017s; }

    #jupiter .pos,
    #jupiter .planet,
    #jupiter.orbit {
        animation-duration: 142.35138s; }

    #saturn .pos,
    #saturn .planet,
    #saturn.orbit {
        animation-duration: 353.36998s; }

    #uranus .pos,
    #uranus .planet,
    #uranus.orbit {
        animation-duration: 1008.20215s; }

    #neptune .pos,
    #neptune .planet,
    #neptune.orbit {
        animation-duration: 1977.49584s; }

    #mercury.orbit {
        width: 192px;
        height: 192px;
        /*margin-top: -16em;*/
       /* margin-left: -16em; */}

    #venus.orbit {
        width: 224px;
        height: 224px;
    }

    #earth.orbit {
        width: 270px;
        height: 270px;
    }

    #mars.orbit {
        width: 324px;
        height: 324px;
    }

    #jupiter.orbit {
        width: 404px;
        height: 404px;
    }

    #saturn.orbit {
        width: 554px;
        height: 554px;
    }

    #uranus.orbit {
        width: 645px;
        height: 645px;
    }

    #neptune.orbit {
        width: 715px;
        height: 715px;
    }

    #mercury .pos {
       left: 50%;
        top: -2%; }

    #venus .pos {
        left: 50%;
        top: -3%; }

    #earth .pos {
        left: 50%;
        top: -2%; }

    #mars .pos {
        left: 50%;
        top: -2%; }

    #jupiter .pos {
        left: 50%;
        top: -4%; }

    #saturn .pos {
        left: 50%;
        top: -3%; }

    #uranus .pos {
        left: 50%;
        top: -1%; }

    #neptune .pos {
        left: 50%;
        top: -1%; }

    #mercury .planet {
        background-image: url("img/mercury.png");
        background-size: 8%;
        /*animation-name: shadow-mercury;*/ }

    #venus .planet {
        background-image: url("img/Venus.png");
        background-size: 12%;
        /*animation-name: shadow-mercury;*/ }

    #earth .planet {
        background-image: url("img/Earth.png");
        background-size: 10%;
        /*animation-name: shadow-mercury;*/ }

    #mars .planet {
        background-image: url("img/Mars.png");
        background-size: 12%;
        /*animation-name: shadow-mercury;*/ }

    #uranus .planet {
        background-image: url("img/Uranus.png");
        background-size: 10%;
        /*animation-name: shadow-mercury;*/ }

    #neptune .planet {
        background-image: url("img/neptune-transparent-300x300.png");
        background-size: 13%;
        /*animation-name: shadow-mercury;*/ }



    @keyframes shadow-mercury {
        0% {
            box-shadow: inset 0 0 1px rgba(0, 0, 0, 0.5);
            /* TOP */ }

        25% {
            box-shadow: inset 4px 0 2px rgba(0, 0, 0, 0.5);
            /* LEFT */ }

        50% {
            box-shadow: inset 13px -5px 4px rgba(0, 0, 0, 0.5);
            /* BOTTOM */ }

        50.01% {
            box-shadow: inset -13px -5px 4px rgba(0, 0, 0, 0.5);
            /* BOTTOM */ }

        75% {
            box-shadow: inset -4px 0 2px rgba(0, 0, 0, 0.5);
            /* RIGHT */ }

        100% {
            box-shadow: inset 0 0 1px rgba(0, 0, 0, 0.5);
            /* TOP */ } }

    .scaled.view-2D #mercury .planet,
    .scaled.view-3D #mercury .planet {
        box-shadow: inset -4px 0 2px rgba(0, 0, 0, 0.5);
        /* RIGHT */ }


    @keyframes orbit {
        0% {
            transform: rotateZ(0deg); }

        100% {
            transform: rotateZ(-360deg); } }

    @keyframes roll {
        0% {
            transform: rotate(0);
        }
        100% {
            transform: rotate(360deg);
        }
    }

</style>
